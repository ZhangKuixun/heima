/* components/search/search.wxss */
.container {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
  width: 100%;
  height: 90rpx;
  overflow: hidden;
}

.containerFocus {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
  width: 100%;
  height: 100%;
  background: #ccc;
}

.search {
  display: flex;
  align-items: center;
  margin: 20rpx;
}

.search-text {
  display: flex;
  align-items: center;
  flex: 1;
  border: 1rpx solid #b4b5b6;
  border-radius: 10rpx;
  height: 60rpx;
  background: #ffffff;
}

.search-text .iconsousuo {
  margin: 0 10rpx;
}
.search-text .input{
  flex: 1;
}
.search-cancel {
  margin: 0 10rpx;
}

.search-history {
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  margin-bottom: 30rpx;
}

.search-history-btn {
  margin-bottom: 30rpx;
}

.search-history-btn .text {
  margin: 10rpx;
  border: 1px solid #b4b5b6;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  background: white;
}

.searchList-item {
  height: 100rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx dashed #b4b5b6;
  padding: 10rpx;
}

.searchList-item .view {
  display: flex;
  align-items: center;
}

.searchList-item .image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}