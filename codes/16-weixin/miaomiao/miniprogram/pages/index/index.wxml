<!--miniprogram/pages/index/index.wxml-->
<!-- 轮播图 -->
<view class="index">
	<swiper class="index-swiper" indicator-dots="{{true}}" indicator-active-color="#937bf5" autoplay="{{false}}" interval="{{3000}}" duration="{{200}}" circular="{{true}}">
		<block wx:for="{{imgUrls}}" wx:key="*this">
			<swiper-item>
				<image src="{{item}}" class="slide-image" mode="aspectFill"></image>
			</swiper-item>
		</block>
	</swiper>

	<!-- table -->
	<view class="index-tab">
		<view class="action">推荐</view>
		<view>最新</view>
	</view>

	<!-- list -->
	<view class="index-list">
		<!-- <block wx:for="{{listData}}" wx:key="*this"> -->
		<view class="index-list-item" wx:for="{{listData}}" wx:key="*this">
			<image mode="aspectFill" src="{{item.userPhoto}}"></image>
			<view class="index-list-text">
				<text>{{item.nickName}}</text>
				<text data-id="{{item._id}}" bindtap="handleLinks">
						<!-- 把当前数据的id挂载到自定义属性 -->
						<text class="iconfont icondianzan"></text>
				<text>{{item.likes}}</text>
				</text>
			</view>
		</view>
		<!-- </block> -->
	</view>
</view>