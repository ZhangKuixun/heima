<!-- 4.wx:if 和 hidden -->
<!-- vue：v-if和v-show的区别，切换是否频繁 -->
<!-- 
  wx:if 是否显示 true=显示 false=不显示
  通过不断的创建节点和删除节点
 -->
<view wx:if='{{ isShow }}'>大傻春</view>

<!-- 
  wx:if 是否隐藏 true=隐藏 false=显示
  通过display来实现显示与隐藏
 -->
<view hidden='{{ isHidden }}'>小傻春</view>



